@page "/bookings"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using FargoSpringsSpa.Models
@using FargoSpringsSpa.Data
@implements IAsyncDisposable
@inject IDbContextFactory<FargoSpringsSpa.Data.FargoSpringsSpaContext> DbFactory

<PageTitle>Admin - Bookings</PageTitle>

<h1>Create And Edit Bookings</h1>

<p>
    <a href="bookings/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Booking">
    <PropertyColumn Property="booking => booking.UserId" />
    <PropertyColumn Property="booking => booking.ServiceId" />
    <PropertyColumn Property="booking => booking.AppointmentDate" />
    <PropertyColumn Property="booking => booking.Status" />
    <PropertyColumn Property="booking => booking.Notes" />

    <TemplateColumn Context="booking">
        <a href="@($"bookings/edit?id={booking.Id}")">Edit</a> |
        <a href="@($"bookings/details?id={booking.Id}")">Details</a> |
        <a href="@($"bookings/delete?id={booking.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private FargoSpringsSpaContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
