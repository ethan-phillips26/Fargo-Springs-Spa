@page "/register"

<PageTitle>Register - Fargo Springs Spa</PageTitle>

<link href="css/login.css" rel="stylesheet" />

<div class="container d-flex flex-column justify-content-center align-items-center mt-5">
    <div class="d-flex align-items-center mb-4 mt-5">
        <h2 class="mb-0">Register An Account With Us!</h2>
    </div>

    <div class="card p-4 mt-2">
        <form>
            <div class="mb-3">
                <label for="nameInput" class="form-label">Full Name</label>
                <input id="nameInput" type="name" class="form-control" placeholder="Enter your full name" />
            </div>

            <div class="mb-3">
                <label for="emailInput" class="form-label">Email address</label>
                <input id="emailInput" type="email" class="form-control" placeholder="Enter your email" />
            </div>

            <div class="mb-4">
                <label for="passwordInput" class="form-label">Password</label>
                <input id="passwordInput" type="password" class="form-control" placeholder="Enter your password" />
            </div>

            <div class="mb-4">
                <label for="passwordInput" class="form-label">Password</label>
                <input id="passwordInput" type="password" class="form-control" placeholder="Confirm your password" />
            </div>


            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>

